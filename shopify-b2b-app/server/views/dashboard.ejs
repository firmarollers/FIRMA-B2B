<!DOCTYPE html>
<html>
<head>
    <title>B2B Manager - <%= shop %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>B2B Wholesale Dashboard</h1>
        <p>Tienda: <strong><%= shop %></strong></p>
        
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Total B2B</h5>
                        <h2><%= stats.totalB2B %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Pending</h5>
                        <h2 class="text-warning"><%= stats.pendingApprovals %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Groups</h5>
                        <h2><%= stats.customerGroups %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>B2B Orders</h5>
                        <h2><%= stats.b2bOrders %></h2>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <h3>Clientes B2B</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(customer => { %>
                    <tr>
                        <td><%= customer.name %></td>
                        <td><%= customer.email %></td>
                        <td>
                            <span class="badge bg-<%= customer.status === 'approved' ? 'success' : 'warning' %>">
                                <%= customer.status %>
                            </span>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <div class="mt-4">
            <a href="/b2b-signup?shop=<%= shop %>" class="btn btn-primary" target="_blank">
                ðŸ“‹ Formulario de Registro PÃºblico
            </a>
        </div>
    </div>
</body>
</html>
